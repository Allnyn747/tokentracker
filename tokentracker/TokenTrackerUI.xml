<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_Frame.xsd">
    <Frame name="TokenTrackerFrame" toplevel="true" movable="true" enableMouse="true" parent="UIParent" frameStrata="MEDIUM">
        <Size x="250" y="180"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <!-- Backdrop will be set via Lua -->
        <Scripts>
            <OnMouseDown> self:StartMoving() </OnMouseDown>
            <OnMouseUp> self:StopMovingOrSizing() </OnMouseUp>
        </Scripts>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="TokenTrackerTitle" inherits="GameFontNormalLarge" text="TOKEN TRACKER">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-10"/>
                    </Anchors>
                    <Color r="1" g="0.82" b="0"/> <!-- Gold color -->
                </FontString>

                <FontString name="TokenTrackerStatusText" inherits="GameFontHighlightSmall" text="Status: Loading...">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-40"/>
                    </Anchors>
                    <Color r="1" g="1" b="1"/> <!-- Neutral color initially -->
                </FontString>

                <FontString name="TokenTrackerGoldEarnedText" inherits="GameFontHighlightSmall" text="Earned: 0g 0s 0c">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-60"/>
                    </Anchors>
                </FontString>

                <FontString name="TokenTrackerTargetText" inherits="GameFontHighlightSmall" text="Target: Not set">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-80"/>
                    </Anchors>
                </FontString>

                <FontString name="TokenTrackerProgressText" inherits="GameFontHighlightSmall" text="Progress: N/A">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-100"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="TokenTrackerStartButton" inherits="UIPanelButtonTemplate" text="Start Farming">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="20" y="50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        -- Lua function will be assigned here in tokentracker.lua
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="TokenTrackerStopButton" inherits="UIPanelButtonTemplate" text="Stop Farming">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-20" y="50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        -- Lua function will be assigned here in tokentracker.lua
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="TokenTrackerCloseButton" inherits="UIPanelCloseButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-8" y="-8"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        TokenTrackerFrame:Hide(); -- Hides the main frame
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>